{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "~/go/src/github.com/hiro8ma/mpc",
        "~/Desktop",
        "~/Downloads"
      ]
    },
    "calc": {
      "command": "/Users/hiroma/.local/bin/uv",
      "args": [
        "run",
        "--directory",
        "/Users/hiroma/go/src/github.com/hiro8ma/mpc/fastmcp",
        "python",
        "calculator_server.py"
      ]
    },
    "calc-http": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "http://127.0.0.1:8000/mcp"
      ]
    }
  }
}
